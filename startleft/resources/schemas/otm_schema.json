{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "otmVersion": "0.1.0",
    "type": "object",
    "required": ["project", "otmVersion"],
    "properties": {
        "project": {
            "type": "object",
            "required": ["name", "id"],
            "properties": {
                "name": {"type": "string"},
                "id": {"$ref": "#/definitions/uuid"},
                "description": {"type": "string"},
                "owner": {"type": "string"},
                "ownerContact": {"type": "string"},
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "attributes": {"type": "object"}
            }
        },
        "representations": {
            "type": "array",
            "required": ["name", "id", "type"],
            "properties": {
                "name": {"type": "string"},
                "id": {"$ref": "#/definitions/uuid"},
                "type": {"type": "string"},
                "description": {"type": "string"},
                "size": {"$ref": "#/definitions/size"},
                "repository": {
                    "type": "object",
                    "required": ["url"],
                    "properties": {
                        "url": {"type": "string"}
                    }
                },
                "attributes": {"type": "object"}
            }
        },
        "assets": {
            "type": "array",
            "required": ["name", "id", "risk"],
            "properties": {
                "name": {"type": "string"},
                "id": {"$ref": "#/definitions/uuid"},
                "description": {"type": "string"},
                "risk": {
                    "type": "object",
                    "required": ["confidentiality", "integrity", "availability"],
                    "properties": {
                        "confidentiality": {"type": "number"},
                        "integrity": {"type": "number"},
                        "availability": {"type": "number"},
                        "comment": {"type": "string"}
                    }
                },
                "attributes": {"type": "object"}
            }
        },
        "trustZones": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["id", "name", "type","risk"],
                "properties": {
                    "id": {"$ref": "#/definitions/uuid"},
                    "name": {"type": "string"},
                    "type": {"type": "string"},
                    "description": {"type": "string"},
                    "risk": {
                        "type": "object",
                        "required": ["trustRating"],
                        "properties": {
                            "trustRating": {"type": "number"}
                        }
                    },
                    "parent": {"$ref": "#/definitions/parent"},
                    "representations": {
                        "type": "array",
                        "items": {"$ref": "#/definitions/representationElement"}
                    },
                    "attributes": {"type": "object"}
                }
            }
        },
        "components": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["id", "name", "type", "parent"],
                "properties": {
                    "id": {"$ref": "#/definitions/uuid"},
                    "name": {"type": "string"},
                    "type": {"type": "string"},
                    "description": {"type": "string"},
                    "parent": {"$ref": "#/definitions/parent"},
                    "representations": {
                        "type": "array",
                        "items": {"$ref": "#/definitions/representationElement"}
                    },
                    "assets": {
                        "type": "object",
                        "properties": {
                            "stored": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "processed": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "threats": {
                        "type": "array",
                        "items": {"$ref": "#/definitions/threat/"}
                    },
                    "tags": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "attributes": {"type": "object"}
                }
            }
        },
        "dataflows": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["id", "name", "source", "destination"],
                "properties": {
                    "id": {"$ref": "#/definitions/uuid"},
                    "name": {"type": "string"},
                    "description": {"type": "string"},
                    "bidirectional": {"type": "boolean"},
                    "source": {"$ref": "#/definitions/uuid"},
                    "destination": {"$ref": "#/definitions/uuid"},
                    "assets": {
                        "type": "array",
                        "items": {"type": "string"}
                    },
                    "threats": {"$ref": "#/definitions/threat"},
                    "tags": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "attributes": {"type": "object"}
                }
            }
        },
        "threats": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["id", "name", "risk"],
                "properties": {
                    "id": {"$ref": "#/definitions/uuid"},
                    "name": {"type": "string"},
                    "description": {"type": "string"},
                    "categories": {
                        "type": "array",
                        "items": {"type": "string"}
                    },
                    "cwes": {
                        "type": "array",
                        "items": {"type": "string"}
                    },
                    "risk": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": ["likelihood", "impact"],
                            "properties": {
                                "likelihood": {"type": "number"},
                                "likelihoodComment": {"type": "string"},
                                "impact": {"type": "number"},
                                "impactComment": {"type": "string"}
                            }
                        }
                    },
                    "tags": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "attributes": {"type": "object"}
                }
            }
        },
        "mitigations": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["id", "name", "riskReduction"],
                "properties": {
                    "id": {"$ref": "#/definitions/uuid"},
                    "name": {"type": "string"},
                    "description": {"type": "string"},
                    "riskReduction": {"type": "number"},
                    "attributes": {"type": "object"}
                }
            }
        }
    },
    "definitions": {
        "uuid": {
            "type": "string",
            "minlength": 1,
            "maxlength": 36,
            "pattern": "^(?![nN][uU][lL]{2}$)\\s*\\S.*"
        },
        "size": {
            "type": "object",
            "required": ["width", "height"],
            "properties": {
                "width": {"type": "number"},
                "height": {"type": "number"}
            }
        },
        "parent": {
            "type": "object",
            "oneOf": [
                {"required": ["trustZone"]},
                {"required":["component"]}
            ],
            "properties": {
                "trustZone": {"type": "string"},
                "component": {"type": "string"}
            }
        },
        "position": {
            "type": "object",
            "required": ["x", "y"],
            "properties": {
                "x": {"type": "number"},
                "y": {"type": "number"}
            }
        },
        "representationElement": {
            "type": "object",
            "required": ["representation", "id"],
            "properties": {
                "representation": {"type": "string"},
                "name": {"type": "string"},
                "id": {"$ref": "#/definitions/uuid"},
                "position": {"$ref": "#/definitions/position"},
                "size": {"$ref": "#/definitions/size"},
                "file": {"type": "string"},
                "line": {"type": "number"},
                "codeSnippet": {"type": "string"},
                "attributes": {"type": "object"}
            }
        },
        "threat": {
            "type": "object",
            "required": ["threat", "state"],
            "properties": {
                "threat": {"type": "string"},
                "state": {"type": "string"},
                "mitigations": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": ["mitigation", "state"],
                        "properties": {
                            "mitigation": {"$ref": "#/definitions/uuid"},
                            "state": {"type": "string"}
                        }
                    }
                }
            }
        }
    }
}